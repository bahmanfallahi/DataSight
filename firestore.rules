
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /reports/{reportId} {
      // Allow anyone to read and create reports for now.
      // In a real application, you would restrict this based on user authentication.
      allow read, create: if true;
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
